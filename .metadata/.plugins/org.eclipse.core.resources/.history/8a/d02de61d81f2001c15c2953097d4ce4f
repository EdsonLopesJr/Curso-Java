package classe;

public class Data {

	int dia;
	int mes;
	int ano;
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes , ano);
	}
	
	Data (){
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	
	Data (int diaConstrutor, int mesConstrutor, int anoConstrutor ){
		dia = diaConstrutor;
		mes = mesConstrutor;
		ano = anoConstrutor;
	}
}
